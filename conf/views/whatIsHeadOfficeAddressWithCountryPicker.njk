{% extends "includes/layout.njk" %}

{% from "govuk/components/back-link/macro.njk"     import govukBackLink %}
{% from "govuk/components/select/macro.njk"        import govukSelect %}
{% from "govuk/components/input/macro.njk"         import govukInput %}
{% from "govuk/components/button/macro.njk"        import govukButton %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "macros/title.njk"                         import title %}

{% block pageTitle %}
  {{ title(messages("whatIsHeadOfficeAddressWithCountryPicker.title"), form.errors) }}
{% endblock %}

{% block mainContent %}

  {{ govukBackLink({
    text: messages("site.back")
  }) }}

  <div class="govuk-main-wrapper">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">

        {% if form.errors.length > 0 %}
          {{ govukErrorSummary({
            "titleText": messages("error.summary.title"),
            "errorList": form.errors
          }) }}
        {% endif %}

        <form action="{{ routes.controllers.WhatIsHeadOfficeAddressWithCountryPickerController.onSubmit(mode).url }}" method="post">

          {{ csrf() | safe }}
            <h1 class="govuk-heading-xl">
                {{ messages("whatIsHeadOfficeAddressWithCountryPicker.heading") }}
            </h1>

       {{ govukInput({
            label: {
              text: messages('whatIsHeadOfficeAddressWithCountryPicker.addressLineOne')
            },
            id: "addressLineOne",
            name: "addressLineOne",
            value: form.addressLineOne.value,
            errorMessage: form.addressLineOne.error
          }) }}

          {{ govukInput({
            label: {
              text: messages('whatIsHeadOfficeAddressWithPostcode.addressLineTwo')
            },
            id: "addressLineTwo",
            name: "addressLineTwo",
            value: form.addressLineTwo.value,
            errorMessage: form.addressLineTwo.error
          }) }}

        {{ govukInput({
          label: {
            text: messages('whatIsHeadOfficeAddressWithCountryPicker.addressLineThree')
          },
          id: "addressLineThree",
          name: "addressLineThree",
          value: form.addressLineThree.value,
          errorMessage: form.addressLineThree.error
        }) }}

         {{ govukInput({
              label: {
                text: messages('whatIsHeadOfficeAddressWithCountryPicker.addressLineFour')
              },
              id: "addressLineFour",
              name: "addressLineFour",
              value: form.addressLineFour.value,
              errorMessage: form.addressLineFour.error
            }) }}

          {{ govukSelect({
            id: "country-autocomplete",
            name: "country",
            errorMessage: form.country.error,
           label: {
                text: messages('whatIsHeadOfficeAddressWithCountryPicker.country')
              },
            items: countries
           })
         }}

          {{ govukButton({
            text: messages("site.continue")
          }) }}

        </form>

      </div>
    </div>
  </div>

{% endblock %}
